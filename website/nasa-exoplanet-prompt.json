      "transition": "all 0.2s ease-in-out",
      "hover_scale": "scale(1.02)",
      "click_scale": "scale(0.98)",
      "fade_in": "fadeIn 0.3s ease-in",
      "slide_up": "slideUp 0.4s ease-out"
    }
