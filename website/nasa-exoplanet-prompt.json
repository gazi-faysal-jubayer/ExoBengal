  "features": {
    "1_exoplanet_explorer": {
      "description": "Main data exploration interface",
      "components": {
        "search_bar": {
          "type": "advanced_search",
          "features": [
            "Autocomplete suggestions",
            "Filter chips",
            "Search history",
            "Voice search",
            "Advanced query builder"
          ],
          "filters": {
            "discovery_method": ["Transit", "Radial Velocity", "Microlensing", "Direct Imaging", "Astrometry"],
            "year_range": "Slider component (1992-present)",
            "planet_radius": "Range slider (Earth radii)",
            "planet_mass": "Range slider (Earth masses)",
            "temperature": "Range slider (Kelvin)",
            "host_star_type": ["M", "K", "G", "F", "A", "B", "O"],
            "disposition": ["Confirmed", "Candidate", "False Positive", "Controversial"]
          }
        },
        
        "data_table": {
          "columns": [
            {"key": "pl_name", "label": "Planet Name", "sortable": true, "searchable": true},
            {"key": "hostname", "label": "Host Star", "sortable": true, "searchable": true},
            {"key": "tic_id", "label": "TIC ID", "sortable": true},
            {"key": "discoverymethod", "label": "Discovery Method", "sortable": true, "filterable": true},
            {"key": "disc_year", "label": "Discovery Year", "sortable": true, "filterable": true},
            {"key": "disc_telescope", "label": "Telescope", "sortable": true, "filterable": true},
            {"key": "pl_orbper", "label": "Orbital Period (days)", "sortable": true, "unit": "days"},
            {"key": "pl_orbsmax", "label": "Semi-Major Axis (AU)", "sortable": true, "unit": "AU"},
            {"key": "pl_rade", "label": "Planet Radius (Earth)", "sortable": true, "unit": "R⊕"},
            {"key": "pl_radj", "label": "Planet Radius (Jupiter)", "sortable": true, "unit": "RJ"},
            {"key": "pl_masse", "label": "Planet Mass (Earth)", "sortable": true, "unit": "M⊕"},
            {"key": "pl_massj", "label": "Planet Mass (Jupiter)", "sortable": true, "unit": "MJ"},
            {"key": "pl_orbeccen", "label": "Eccentricity", "sortable": true},
            {"key": "pl_orbincl", "label": "Inclination (deg)", "sortable": true, "unit": "°"},
            {"key": "pl_tranmid", "label": "Transit Midpoint", "sortable": true},
            {"key": "pl_trandep", "label": "Transit Depth", "sortable": true},
            {"key": "pl_orbtper", "label": "Transit Duration", "sortable": true, "unit": "hours"},
            {"key": "st_rad", "label": "Star Radius (Solar)", "sortable": true, "unit": "R☉"},
            {"key": "st_mass", "label": "Star Mass (Solar)", "sortable": true, "unit": "M☉"},
            {"key": "ra", "label": "Right Ascension", "sortable": true, "unit": "degrees"},
            {"key": "dec", "label": "Declination", "sortable": true, "unit": "degrees"},
            {"key": "reference", "label": "Reference", "linkable": true}
          ],
          "features": [
            "Virtualized scrolling for performance",
            "Column resizing and reordering",
            "Multi-column sorting",
            "Export to CSV/JSON",
            "Saved views",
            "Row selection for comparisons",
            "Inline editing with validation",
            "Column pinning/freezing"
          ]
        },
        
        "visualization_panels": {
          "3d_orbital_system": {
            "library": "Three.js",
            "features": [
              "Interactive 3D planet system viewer",
              "Accurate scale representations",
              "Orbital animation with time controls",
              "Camera controls (zoom, pan, rotate)",
              "Planet information on hover",
              "Comparison mode for multiple systems",
              "VR/AR support"
            ]
          },
          
          "statistical_charts": {
            "discovery_timeline": {
              "type": "Area chart with annotations",
              "axes": {"x": "Year", "y": "Cumulative discoveries"},
              "features": ["Method breakdown", "Major mission markers", "Interactive tooltips"]
            },
            "mass_radius_diagram": {
              "type": "Scatter plot with density contours",
              "axes": {"x": "log(Mass)", "y": "log(Radius)"},
              "features": ["Planet type regions", "Solar system reference", "Zoom regions", "Custom selections"]
            },
            "habitable_zone_plot": {
              "type": "2D scatter with zone overlays",
              "axes": {"x": "Semi-major axis", "y": "Stellar temperature"},
              "features": ["Habitable zone calculation", "Earth similarity index", "Interactive filters"]
            },
            "method_distribution": {
              "type": "Animated donut chart",
              "features": ["Year-by-year animation", "Drill-down capability", "Method comparisons"]
            },
            "sky_map": {
              "type": "Celestial sphere projection",
              "library": "D3.js with astronomical projections",
              "features": ["Constellation overlays", "Telescope coverage areas", "Discovery density heatmap"]
            },
            "parameter_correlations": {
              "type": "Interactive correlation matrix",
              "features": ["Heatmap visualization", "Pearson coefficients", "Click for scatter plots"]
            }
          },
          
          "comparison_tools": {
            "planet_comparison": {
              "features": [
                "Side-by-side parameter comparison",
                "Radar charts for multi-parameter view",
                "Scale visualizations",
                "Similarity scoring"
              ]
            },
            "system_architecture": {
              "features": [
                "Multi-planet system layouts",
                "Resonance chain detection",
                "Stability analysis visualization"
              ]
            }
          }
        },
        
        "detail_view": {
          "layout": "Modal or side panel",
          "sections": [
            {
              "title": "Overview",
              "content": ["Key parameters card", "Discovery story", "Artist conception"]
            },
            {
              "title": "Physical Properties",
              "content": ["Detailed measurements", "Error bars", "Comparison to Earth/Jupiter"]
            },
            {
              "title": "Host Star",
              "content": ["Stellar parameters", "Spectrum type", "Location in galaxy"]
            },
            {
              "title": "Orbital Characteristics",
              "content": ["Orbital diagram", "Transit light curve", "Radial velocity curve"]
            },
            {
              "title": "Habitability",
              "content": ["HZ position", "Atmosphere models", "Biosignature potential"]
            },
            {
              "title": "References",
              "content": ["Primary papers", "NASA links", "Related discoveries"]
            }
          ]
        }
      }
    },
    
